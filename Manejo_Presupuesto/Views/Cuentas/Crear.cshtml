@model CuentaCreacionViewModel
@{
    ViewData["Title"] = "Crear Cuenta";
}

<h1>Crear una Cuenta</h1>
<h5>
    La cuenta se refere a los distintos balances que tienes:
    tarjeta de credito, cuenta de ahorro,Préstamo, etc.
</h5>



<form asp-action="Crear">

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="mb-3">
        <label asp-for="Nombre" class="from-label"></label>
        <input asp-for="Nombre" class="from-control" placeholder="Nombre" />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="TipoCuentaId" class="from-label"></label>
        <select asp-for="TipoCuentaId" class="from-select" asp-items="Model.TiposCuentas"></select>
        <span asp-validation-for="TipoCuentaId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Balance" class="from-label"></label>
        <input asp-for="Balance" class="from-control" placeholder="Blance"/>
        <span asp-validation-for="Balance" class="text-danger"></span>

       
    </div>

    <div class="mb-3">
        <label asp-for="Descripcion" class="from-label"></label>
        <textarea asp-for="Descripcion" class="from-control" placeholder="Descripcion"></textarea>
        <span asp-validation-for="Descripcion" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Enviar</button>
    <a class="btn btn-secondary" asp-action="Index">Cancelar</a>

</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
